# Security Configuration Example
# Copy this file to .env and configure the values for your environment

# API Key Configuration
# Comma-separated list of valid API keys for production
VALID_API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# Development API key (only used if VALID_API_KEYS is not set)
DEV_API_KEY=dev-key-12345

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Request Validation Configuration
MAX_CONTENT_LENGTH=1048576  # 1MB in bytes

# Logging Configuration
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Application Configuration
DEBUG=false