# Development Environment Configuration
# This file contains development-specific settings

# Application Configuration
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=console
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=true

# Development server settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS settings (permissive for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Request limits (relaxed for development)
MAX_CONTENT_LENGTH=2097152  # 2MB
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000
RATE_LIMIT_BURST=20

# External API Configuration (use test/sandbox endpoints when available)
ULTRAVOX_API_KEY=your_development_ultravox_api_key_here
ULTRAVOX_BASE_URL=https://api.ultravox.ai

TWILIO_ACCOUNT_SID=your_development_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_development_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_development_twilio_phone_number_here

# Development-specific features
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true
MOCK_EXTERNAL_APIS=false  # Set to true to use mocked responses